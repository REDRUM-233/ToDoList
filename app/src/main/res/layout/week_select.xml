    <CheckBox
        android:id="@+id/week3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background"
        android:button="@null"
        android:padding="5dp"
        android:text="周三"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/week2"
        app:layout_constraintRight_toLeftOf="@id/week4"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/week4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background"
        android:button="@null"
        android:padding="5dp"
        android:text="周四"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
