        app:layout_constraintRight_toLeftOf="@id/week2"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/week2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background"
